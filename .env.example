# talos.env — Talos v4.0 Environment Configuration
# Copy to ~/talos/config/talos.env before first boot
# PERMISSIONS: chmod 600 ~/talos/config/talos.env
# WARNING: This file contains secrets. Do not commit to version control.

# =============================================================================
# CORE IDENTITY
# =============================================================================
# TALOS_VERSION: Semantic version string (e.g., 4.0.0)
TALOS_VERSION=4.0.0
# TRUST_LEVEL: Authorization clearance level 
# Valid Range: 0 to 3 (0=Restrictive, 3=Full Autonomy)
TRUST_LEVEL=0

# =============================================================================
# RESOURCE CEILINGS (Hard Limits — do not exceed)
# =============================================================================
# REDIS_MAX_MEMORY: Maximum memory allocated for Redis cache
# Valid Range: 128mb to 2gb (depending on available system RAM)
REDIS_MAX_MEMORY=512mb
# REDIS_MAX_MEMORY_POLICY: Eviction policy when memory limit is reached
# Options: allkeys-lru, volatile-lru, allkeys-random, volatile-random, noeviction
REDIS_MAX_MEMORY_POLICY=allkeys-lru
# CHROMADB_MAX_VECTORS: Maximum number of embeddings to store
# Valid Range: 1,000 to 1,000,000
CHROMADB_MAX_VECTORS=100000
# VRAM_MUTEX_TIMEOUT: Timeout in seconds for VRAM lock acquisition
# Valid Range: 10 to 3600
VRAM_MUTEX_TIMEOUT=300
# LOG_LEVEL: Application logging detail
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
# GEMINI_MODEL: AI model variant to use
# Options: gemini-1.5-flash, gemini-1.5-pro, etc.
GEMINI_MODEL=gemini-1.5-flash
# GEMINI_MAX_TOKENS_PER_DAY: Daily limit for safety/cost management
# Valid Range: 1000 to 1,000,000 (Adjust based on rate limits)
GEMINI_MAX_TOKENS_PER_DAY=50000

# =============================================================================
# WEB DASHBOARD (REQUIRED)
# =============================================================================
# BASIC_AUTH_USER: String, strictly alphanumeric
BASIC_AUTH_USER=admin
# BASIC_AUTH_PASS: Must be 16+ characters long
BASIC_AUTH_PASS=ChangeThisToASecurePassword16Chars!
# WEB_PORT: The local port the dashboard will listen to
# Valid Range: 1024 to 65535
WEB_PORT=8080
# WEB_BIND: IP interface to bind 
# Options: 127.0.0.1 (local only), 0.0.0.0 (expose to local network)
WEB_BIND=127.0.0.1
# DASHBOARD_AUTO_OPEN: Launch browser automatically
# Options: true, false
DASHBOARD_AUTO_OPEN=true

# =============================================================================
# SECURITY
# =============================================================================
# STRIKE_THRESHOLD: Number of malicious actions before lockdown
# Valid Range: 1 to 10
STRIKE_THRESHOLD=3
# SKILL_MAX_SIZE_BYTES: Maximum allowed size for a loaded skill file
# Valid Range: 1024 to 10485760 (1KB to 10MB)
SKILL_MAX_SIZE_BYTES=1048576
# PROMPT_MAX_LENGTH: Maximum characters allowed in a user query/prompt
# Valid Range: 100 to 100000 
PROMPT_MAX_LENGTH=10000
# SOCKET_PROXY_URL: Docker or internal security socket
# Format: Valid HTTP URL
SOCKET_PROXY_URL=http://socket-proxy:2375

# =============================================================================
# BOTS (Optional — leave blank to disable)
# =============================================================================
# TELEGRAM_BOT_TOKEN: String 
TELEGRAM_BOT_TOKEN=
# DISCORD_BOT_TOKEN: String
DISCORD_BOT_TOKEN=

# =============================================================================
# MAINTENANCE
# =============================================================================
# DREAM_CYCLE_HOUR: Hour of day the system performs its optimization sweep
# Valid Range: 0 to 23 (24-hour time)
DREAM_CYCLE_HOUR=4
# DREAM_CYCLE_MINUTE: Minute of the hour
# Valid Range: 0 to 59
DREAM_CYCLE_MINUTE=0
# BACKUP_RETENTION_DAYS: Time to keep automated backups 
# Valid Range: 1 to 365
BACKUP_RETENTION_DAYS=30
